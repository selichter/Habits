default_platform :ios

platform :ios do

  desc "Runs all the tests"
    lane :test do
      lint
      scan(
        scheme: "Habits",
        devices: ["iPhone 8"],
      )
    end

    desc "lint the swift"
      lane :lint do
        swiftlint(
          mode: :lint,
          executable: "Pods/SwiftLint/swiftlint",
          config_file: ".swiftlint.yml",
          ignore_exit_status: false,
          quiet: false,
          strict: true
        )
      end
end
