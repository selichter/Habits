default_platform :ios

platform :ios do

  before_all do
    setup_circle_ci
  end

  desc "Runs all the tests"
    lane :test do
      lint
      scan(
        scheme: "Habits",
        devices: ["iPhone 8"],
      )
    end

    desc "lint the swift"
      lane :lint do
        swiftlint(
          mode: :lint,
          executable: "Pods/SwiftLint/swiftlint",
          config_file: ".swiftlint.yml",
          ignore_exit_status: false,
          quiet: false,
          strict: true
        )
      end

      desc "Ad-hoc build"
      lane :adhoc do
    match(type: "adhoc")
    gym(export_method: "ad-hoc")
  end
end
